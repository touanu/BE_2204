@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<BookManager.Models.Book>

<h2>Danh sách</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Đơn giá</th>
            <th>Tồn kho</th>
        </tr>
    </thead>
    @if (Model != null && Model.Count > 0)
    {
        foreach (var book in Model)
        {
            <tr>
                <td>@book.BookID</td>
                <td>@book.BookName</td>
                <td>@book.Price</td>
                <td>@book.Stock</td>
            </tr>
        }
    }
</table>

<div class="col-md-offset-2 col-md-10 py-3" >
    <button class="btn btn-primary" />
    <a href="/Book/AddNew" class="text-decoration-none">Thêm mới</a>
</div>
